{
  "name": "mr-coffee-ruby",
  "version": "1.0.0",
  "description": "",
  "main": "",
  "dependencies": {},
  "devDependencies": {
    "@prettier/plugin-ruby": "^0.12.2",
    "browser-sync": "^2.26.5",
    "connect-browser-sync": "^2.1.0",
    "cpx": "^1.5.0",
    "foreman": "^3.0.1",
    "npm-run-all": "^4.1.5",
    "prettier": "^1.17.0",
    "rimraf": "^2.6.3",
    "startbootstrap-sb-admin-2": "^4.0.3",
    "watch": "^1.0.2"
  },
  "config": {
    "app_dir": "./",
    "s3_bucket": "mr-coffee-ruby",
    "stack_name": "mr-coffee-ruby-lambda",
    "region": "us-east-1",
    "stage": "Development",
    "api_url": "https://iws61zofzj.execute-api.us-east-1.amazonaws.com/Prod/",
    "local_network": "lambda-local",
    "local_db": "dynamodb"
  },
  "scripts": {
    "start": "nf start -j Procfile",
    "build": "npm-run-all app:build aws:sam:build",
    "test": "npm-run-all test:spec test:feature:headless",
    "test:spec": "cd $npm_package_config_app_dir; bundle exec rspec",
    "test:feature:headless": "cd $npm_package_config_app_dir; bundle exec cucumber --tags ~@wip",
    "test:feature:brower": "cd $npm_package_config_app_dir; BROWSER=true bundle exec cucumber",
    "format": "cd $npm_package_config_app_dir; prettier --prefer-single-quotes false --write 'app/**/*.rb'",
    "linter": "cd $npm_package_config_app_dir; bundle exec rubocop",
    "linter:config": "cd $npm_package_config_app_dir; bundle exec rubocop --auto-gen-config",
    "linter:fix": "cd $npm_package_config_app_dir; bundle exec rubocop --auto-correct",
    "watch": "npm-run-all watch:*",
    "watch:app": "watch 'npm-run-all test format linter:fix' $npm_package_config_app_dir/app",
    "watch:test": "watch 'npm-run-all test format linter:fix' $npm_package_config_app_dir/app/spec",
    "app:build": "cd $npm_package_config_app_dir; bundle install",
    "app:front": "browser-sync start --config bs-config.js",
    "app:server": "cd $npm_package_config_app_dir; bundle exec shotgun -p 9292 app/config.ru",
    "app:api": "cd $npm_package_config_app_dir; sam local start-api --host 0.0.0.0 --port 4000 --template .aws-sam/build/template.yaml",
    "db:setup": "npm-run-all db:setup:*",
    "db:setup:network": "docker network create $npm_package_config_local_network",
    "db:setup:db": "docker run -d -v $PWD:/dynamodb_local_db -p 8000:8000 --network $npm_package_config_local_network --name $npm_package_config_local_db instructure/dynamo-local-admin",
    "db:destroy": "npm-run-all db:destroy:db db:destroy:network",
    "db:destroy:network": "docker network rm $npm_package_config_local_network",
    "db:destroy:db": "docker rm -f $npm_package_config_local_db",
    "db:start": "docker start $npm_package_config_local_db",
    "db:stop": "docker stop $npm_package_config_local_db",
    "db:show": "open http://127.0.0.1:8000",
    "db:restart": "npm-run-all db:stop db:start",
    "aws:s3:create": "aws s3 mb s3://$npm_package_config_s3_bucket --region $npm_package_config_region",
    "aws:s3:destroy": "aws s3 rb s3://$npm_package_config_s3_bucket --force --region $npm_package_config_region",
    "aws:sam:build": "cd $npm_package_config_app_dir; sam build",
    "aws:sam:package": "sam package --template-file $npm_package_config_app_dir/.aws-sam/build/template.yaml --s3-bucket $npm_package_config_s3_bucket --output-template-file $npm_package_config_app_dir/.aws-sam/packaged.yaml",
    "aws:sam:deploy": "sam deploy --template-file $npm_package_config_app_dir/.aws-sam/packaged.yaml --stack-name $npm_package_config_stack_name --capabilities CAPABILITY_NAMED_IAM  --parameter-overrides Stage=$npm_package_config_stage ApiUrl=$npm_package_config_api_url --region $npm_package_config_region",
    "aws:sam:describe": "aws --region $npm_package_config_region cloudformation describe-stacks --stack-name $npm_package_config_stack_name",
    "aws:sam:release:develop": "npm-run-all aws:sam:build aws:sam:package aws:sam:deploy aws:sam:describe",
    "aws:sam:release": "npm-run-all test aws:sam:build aws:sam:package aws:sam:deploy aws:sam:describe",
    "aws:sam:destroy": "aws --region $npm_package_config_region cloudformation delete-stack --stack-name $npm_package_config_stack_name"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/k2works/mr-coffee-ruby.git"
  },
  "author": "k2works",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/k2works/mr-coffee-ruby/issues"
  },
  "homepage": "https://github.com/k2works/mr-coffee-ruby#readme"
}
